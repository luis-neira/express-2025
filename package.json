{
  "name": "crud-express-2025",
  "version": "1.0.0",
  "main": "src/index.js",
  "scripts": {
    "start": "NODE_ENV=production node src/index.js",
    "dev": "DEBUG=http node --watch src/index.js | pino-dev",
    "dev:verbose": "DEBUG=http node --watch src/index.js | pino-pretty",
    "test": "DB_ENV=test SERVER_LOGGING=false mocha --file test/setup.js --watch --recursive",
    "test:unit": "DB_ENV=test SERVER_LOGGING=false mocha --file test/setup.js  'test/unit/**/*.test.js'",
    "test:integration": "DB_ENV=test SERVER_LOGGING=false mocha --file test/setup.js 'test/integration/**/*.test.js'",
    "coverage": "NODE_ENV=test nyc mocha --recursive",
    "db:setup": "./scripts/setup-postgres.sh",
    "db:init": "node -r dotenv/config utils/init-db.js",
    "db:stop": "docker stop express-postgres",
    "db:start": "docker start express-postgres",
    "docker:start": "docker run --rm -p 3000:3000 -v $(pwd):/app -v /app/node_modules --name express-api express-app",
    "docker:stop": "docker stop express-api"
  },
  "engines": {
    "node": ">=20.0.0",
    "npm": ">=10.0.0"
  },
  "keywords": [],
  "author": "luis-neira",
  "license": "ISC",
  "description": "",
  "dependencies": {
    "ajv": "^8.17.1",
    "awilix": "^12.0.5",
    "awilix-express": "^9.0.2",
    "better-sqlite3": "^11.10.0",
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.5",
    "debug": "^4.4.1",
    "dotenv": "^16.5.0",
    "express": "^5.1.0",
    "express-xss-sanitizer": "^2.0.0",
    "helmet": "^8.1.0",
    "http-errors": "^2.0.0",
    "jsonwebtoken": "^9.0.2",
    "knex": "^3.1.0",
    "pg": "^8.16.0",
    "pino-http": "^10.4.0"
  },
  "devDependencies": {
    "chai": "^4.5.0",
    "mocha": "^11.1.0",
    "nyc": "^17.1.0",
    "pino-dev": "^4.0.3",
    "pino-pretty": "^13.0.0",
    "sinon": "^20.0.0",
    "supertest": "^7.1.0"
  }
}
